<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Listagem de Jogos</title>
  <style>
    body {
    text-align: center;
    font-family: "Ubuntu", sans-serif;
    }
    h1 {
        margin-top: 20px;
    }
    .game-card {
        border: 3px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        margin: 10px;
        text-align: center;
        display: inline-block;
        height: 500px;
        width: 250px;
        box-sizing: border-box;
        vertical-align: top;
        background-color: #f2f2f2;
    }

    .game-image {
        border: 3px solid #000000;
        width: 150px;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .game-info {
        font-family: "Ubuntu", sans-serif;
        margin-top: 10px;
    }
  </style>
  </head>
  <body>
      <h1>Listagem de Jogos</h1>
      <% games.forEach((game, index) => { %>
          <div class="game-card">
              <h2><%= game.name %></h2>
              <% if (game.image) { %>
                  <img class="game-image" src="http://localhost:3000/images/<%= game.image%>" alt="<%= game.name %>">
              <% } %>
              <p class="game-info">Preço: <%= "R$"+game.price %></p>
              <p class="game-info">Plataforma: <%= game.platform %></p>
              <p class="game-info">Classificação Etária: <%= game.ageRating %></p>
              <p class="game-info">Gênero: <%= game.genre %></p>
          </div>
          <% if ((index + 1) % 5 === 0) { %>
              <br>
          <% } %>
      <% }); %>
  </body>
  </html>
