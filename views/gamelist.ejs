
  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Jogos</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            text-align: center;
            font-family: "Ubuntu", sans-serif;
            margin-top: 20px;
        }
        .game-card {
            border: 3px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            margin: 10px auto;
            text-align: center;
            display: inline-block;
            height: 500px;
            width: 275px;
            box-sizing: border-box;
            background-color: #f2f2f2;
            overflow: hidden;
        }
        .game-name {
            font-size: 16px; /* Reduzindo o tamanho da fonte do nome do jogo */
            font-family: "Ubuntu", sans-serif;
            margin-bottom: 10px;
        }
        .game-image {
            border: 3px solid #000000;
            width: 150px;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        .game-info {
            font-family: "Ubuntu", sans-serif;
            margin-top: 10px;
            font-size: 14px;
        }
        .download-button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            display: block;
            margin: auto;
            margin-top: auto;
        }
        .download-button:hover {
            background-color: #45a049;
        }
        .action-buttons {
            margin-top: 30px;
        }
        .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Listagem de Jogos</h1>

        <div class="row action-buttons justify-content-center">
            <div class="col-md-4">
                <button class="btn btn-success btn-block" id="order" onclick="window.location.href='http://localhost:3000/order'">Pedido</button>
            </div>
            <div class="col-md-4">
                <button class="btn btn-success btn-block" id="upload" onclick="window.location.href='http://localhost:3000/upload/1'">Upload Imagem</button>
            </div>
        </div>

        <% games.forEach((game, index) => { %>
            <div class="game-card">
                <h2 class="game-name"><%= game.name %></h2>
                <% if (game.image) { %>
                    <img class="game-image" src="http://localhost:3000/images/<%= game.image%>" alt="<%= game.name %>">
                    <a class="download-button" href="http://localhost:3000/images/<%= game.image%>" download="<%= game.name %>">Download Imagem</a>
                <% } %>
                <p class="game-info">ID do Jogo: <%= game.id %></p>
                <p class="game-info">Preço: <%= "R$"+game.price %></p>
                <p class="game-info">Plataforma: <%= game.platform %></p>
                <p class="game-info">Classificação Etária: <%= game.ageRating %></p>
                <p class="game-info">Gênero: <%= game.genre %></p>
            </div>
            <% if ((index + 1) % 3 === 0) { %>
                <br>
            <% } %>
        <% }); %>
    </div>
</body>
</html>
